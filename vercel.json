{
  "version": 2,
 
  
    "builds": [
      {
        "src": "backend/index.js",
        "use": "@vercel/node" 
      },
      {
        "src": "frontend",
        "use": "@vercel/static-build" 
      },
      {
        "src": "package.json", 
        "use": "@vercel/node" 
      }
    ],
  
  "routes": [
    {
      "src": "/api/books",
      "dest": "api/books.js"
    },
    {
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept"
      },
      "src": "/api/books",
      "dest": "/api/books.js"
      
    }
  ]
}
